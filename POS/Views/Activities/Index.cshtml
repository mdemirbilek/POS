@model IEnumerable<POS.Activity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Activities of</h3>
<h2>@ViewBag.ModuleName</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Activities", new { id = ViewBag.ModuleId }, null)
</p>
<table class="table">
    <tr>
        <th>
            Activity Type
        </th>

        <th>
            Evaluation Type
        </th>
        <th>
            Total Hours
        </th>

        <th>
            Room Preference
        </th>
        <th>
            Staff Name
        </th>
        <th>
            Group No
        </th>
        <th>
            Note
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EvalType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p>
    <hr />
    @Html.ActionLink("Back to Module List",  Session["BackLink"].ToString(), "Modules")
</p>
